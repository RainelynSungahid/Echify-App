{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Echify App",
  "version": "0.1.0",
  "identifier": "com.echify.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "npx expo start --web",
    "beforeBuildCommand": "npx expo export --platform web"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Echify App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
